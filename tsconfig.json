{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
   "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/components/*": ["./src/components/*"]
    },
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "src",
    "app",
    "*.ts",
    "*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}